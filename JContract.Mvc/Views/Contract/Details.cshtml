@model JContract.Application.Contract.ContractDto

@* @{
    ViewData["Title"] = "Details";
} *@

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Szczegóły</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Details" method="post">



                        <div class="form-group mb-3">
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                            @Html.DisplayFor(model => model.PhoneNumber)
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            @Html.DisplayNameFor(model => model.Street)
                            @Html.DisplayFor(model => model.Street)
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            @Html.DisplayNameFor(model => model.City)
                            @Html.DisplayFor(model => model.City)
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            @Html.DisplayNameFor(model => model.PostalCode)
                            @Html.DisplayFor(model => model.PostalCode)
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Contract" asp-action="Index" class="btn btn-secondary">Wróć do Listy</a>
                            <a asp-controller="Contract" asp-action="Index" class="btn btn-danger">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>